{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Scotty3D",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/media",
            "environment": [],
            "windows": {
                "type": "cppvsdbg",
                "console": "internalConsole"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "preLaunchTask": "Build"
        },
        {
            "name": "Tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Scotty3D",
            "args": [
                "--run-tests",
                "a2.g1"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/media",
            "environment": [],
            "windows": {
                "type": "cppvsdbg",
                "console": "internalConsole"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "preLaunchTask": "Build"
        },
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "enter program name, for example ${workspaceFolder}/a.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/path/to/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}